{
  "name": "triliporra",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "webpack",
    "prestart": "npm run build",
    "start": "node src/server.js",
    "start:watch": "nodemon -w src/ --exec npm start",
    "test": "mocha",
    "test:watch": "mocha -w",
    "predocker:build": "npm run build",
    "docker:build": "docker build -t triliporra . && docker tag triliporra asierba/triliporra",
    "predeploy:local": "npm run docker:build",
    "deploy:local": "docker run -p 3000:3000 asierba/triliporra",
    "predeploy": "npm run docker:build",
    "deploy": "docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD && docker push asierba/triliporra"
  },
  "author": "Asier Barrenetxea",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "style-loader": "^0.21.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15"
  }
}
