{
  "name": "triliporra",
  "version": "1.0.0",
  "description": "",
  "main": "src/api/server.js",
  "scripts": {
    "migrate": "mm",
    "prebuild": "npm run migrate",
    "build": "webpack",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node src/api/server.js",
    "backend:watch": "nodemon --exec node src/api/server.js",
    "frontend:watch": "webpack-dev-server --open --mode development",
    "prestart:watch": "npm run migrate",
    "start:watch": "npm run backend:watch | npm run frontend:watch",
    "test-frontend": "jest",
    "test-backend": "mocha --compilers js:babel-core/register --require ignore-styles --recursive",
    "test": "npm run test-frontend && npm run test-backend",
    "test-backend:watch": "npm run test-backend -- --watch",
    "test-frontend:watch": "npm run test-frontend -- --watch",
    "docker:build": "docker build -t triliporra . && docker tag triliporra asierba/triliporra",
    "predeploy:local": "npm run docker:build",
    "deploy:local": "docker-compose up",
    "predeploy": "npm run docker:build",
    "deploy": "docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD && docker push asierba/triliporra"
  },
  "author": "Asier Barrenetxea",
  "license": "ISC",
