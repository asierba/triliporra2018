{
  "name": "triliporra",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "migrate": "mm",
    "prebuild": "npm run migrate",
    "build": "webpack",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node src/server.js",
    "backend:watch": "nodemon --exec node src/server.js",
    "frontend:watch": "webpack-dev-server --open --mode development",
    "prestart:watch": "npm run migrate",
    "start:watch": "npm run backend:watch | npm run frontend:watch",
    "test": "mocha",
    "test:watch": "mocha -w",
    "docker:build": "docker build -t triliporra . && docker tag triliporra asierba/triliporra",
    "predeploy:local": "npm run docker:build",
    "deploy:local": "docker-compose up",
    "predeploy": "npm run docker:build",
    "deploy": "docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD && docker push asierba/triliporra"
  },
  "author": "Asier Barrenetxea",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "bootstrap": "^4.1.1",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "jquery": "^3.3.1",
    "mongodb": "^3.1.0-beta4",
    "popper.js": "^1.14.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "expect.js": "^0.3.1",
    "file-loader": "^1.1.11",
    "mocha": "^5.1.1",
    "mongodb-migrations": "^0.8.5",
    "nodemon": "^1.17.3",
    "style-loader": "^0.21.0",
    "supertest": "^3.1.0",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.12.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.3"
  }
}
